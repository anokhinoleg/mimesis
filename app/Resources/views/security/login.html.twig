{% extends 'base.html.twig' %}
{% block main %}
    <div class="row">
        <div class="col-xs-12">
            <h1>Login</h1>
            {% if error %}
                <div class="alert-danger alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            {{ form_start(form) }}
                {{ form_row(form._username) }}
                {{ form_row(form._password) }}
                <button class="btn-success btn" type="submit">Login <span class="fa fa-lock"></span></button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
