{% extends 'base.html.twig' %}
{% block main %}
    {% block post %}
        <div class="post">
            <div class="post_meta_info">
                <p class="post_author">Published by {{ post.author }}</p>
                <p class="post_createdAt">{{ post.createdAt|date('\\o\\n F jS  \\a\\t H:i:s') }}</p>
            </div>
            <h2 class="post_title">{{ post.title }}</h2>
            <img src="https://mediananny.com/content/images_new/news/620x408/151707.jpg" alt="Image">
            <p class="post_text">{{ post.text }}</p>
           {{ post.author|markdownify }}
        </div>
    {% endblock %}
{% endblock %}
{% block comments %}
    {% include 'layouts/comments.html.twig' %}
{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.3/react.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.3/react-dom.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.min.js"></script>
{% endblock %}
